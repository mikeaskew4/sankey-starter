<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="2">Name</th>
<!--      <th>Color</th>-->
      <th>Links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr class=<%= node.node_type == 1 ? "template" : "component"%>>
        <td style="text-align:left">
          <%= node.node_type == 1 ? 'T' : 'C' %><%= node.enumerate %>
        </td>
        <td colspan="2">
          <%= node.name %>    
        </td>
<!--        <td><%#= node.color %></td>-->
        <td>
          <%= node.links.count + Link.where(:target => node.id).count %>
          <%#= node.links.count + @targets.count %>
        </td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

